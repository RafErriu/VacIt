{% extends 'base.html.twig' %}

{% block title %}Hello LoginController!{% endblock %}

{% block body %}


<div class="grid-x">

    <div class="cell small-4 " >
		<img src="{{ asset('assets/images/vacit-login.png')}}" class="log-logo">
    </div>



	<div class="cell small-8 login">

		{% if error %}
			<div>{{ error.messageKey|trans(error.messageData, 'security') }}</div>
		{% endif %}

        <h2 style="color: #F15A24; font-family: Bebas Neue;  font-size: 60px;">LOGIN</h2>
		<form action="{{ path('login') }}" method="post">
			<label for="username">Email:</label>
			<input type="text" id="username" name="_username" value="{{ last_username }}" class="line"/>

			<label for="password">Password:</label>
			<input
			type="password" id="password" name="_password" class="line"/>

			{# If you want to control the URL the user is redirected to on success
			        <input type="hidden" name="_target_path" value="/account"/> #}

			<button type="submit"><i class="fas fa-arrow-right log-arrow"></i></button>
		</form>
	</div>
</div>
{% endblock %}

