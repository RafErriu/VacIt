{% extends 'base.html.twig' %}

{% block title %}VacIt Homepage{% endblock %}

{% block body %}
<style>
    .example-wrapper { margin: 1em auto; max-width: 800px; width: 95%; font: 18px/1.5 sans-serif; }
    .example-wrapper code { background: #F5F5F5; padding: 2px 6px; }
</style>

<div class="grid-x main">
    {% for vacature in vacatures %}
    <div class="cell medium-8 vacature">
    <div class="plaatje"><img src="{{asset(vacature.systeem.plaatje)}}"></div>
    <div style="display: inline-block;">
        <div>{{vacature.datum.format('d/m/Y')}}</div>  
        <div>{{vacature.titel}}</div>
        <div class="omschrijving">{{vacature.omschrijving}}</div>
    </div>
    </div>
    {% endfor %} 
</div>
{% endblock %}
